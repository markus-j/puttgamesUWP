        </CheckBox>
        <CheckBox Grid.Row="2" Grid.Column="4" x:Name="ii_iv" Style="{StaticResource MyCheckBoxStyle}" 
                  Checked="checkbox_Clicked" Unchecked="checkbox_Clicked" >
