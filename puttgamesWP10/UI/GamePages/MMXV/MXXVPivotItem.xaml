        </CheckBox>
        <CheckBox Grid.Row="4" Grid.Column="4" x:Name="iv_iv" Style="{StaticResource MyCheckBoxStyle}" 
                   Checked="checkbox_Clicked" Unchecked="checkbox_Clicked" >
