            </CheckBox.RenderTransform>
        </CheckBox>

        <CheckBox Grid.Row="4" Grid.Column="1" x:Name="iv_i" Style="{StaticResource MyCheckBoxStyle}" 
                  Checked="checkbox_Clicked" Unchecked="checkbox_Clicked" >
            <CheckBox.RenderTransform>
