        </CheckBox>
        <CheckBox Grid.Row="4" Grid.Column="3" x:Name="iv_iii" Style="{StaticResource MyCheckBoxStyle}" 
                  Checked="checkbox_Clicked" Unchecked="checkbox_Clicked" >
            <CheckBox.RenderTransform>
