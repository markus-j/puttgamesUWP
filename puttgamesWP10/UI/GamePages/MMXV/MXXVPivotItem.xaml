            </CheckBox.RenderTransform>
        </CheckBox>
        <CheckBox Grid.Row="1" Grid.Column="6" x:Name="i_vi" Style="{StaticResource MyCheckBoxStyle}" 
                  Checked="checkbox_Clicked" Unchecked="checkbox_Clicked" >
            <CheckBox.RenderTransform>
                <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
            </CheckBox.RenderTransform>
        </CheckBox>

        <CheckBox Grid.Row="2" Grid.Column="1" x:Name="ii_i" Style="{StaticResource MyCheckBoxStyle}" 
                  Checked="checkbox_Clicked" Unchecked="checkbox_Clicked" >
            <CheckBox.RenderTransform>
                <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
            </CheckBox.RenderTransform>
        </CheckBox>
        <CheckBox Grid.Row="2" Grid.Column="2" x:Name="ii_ii" Style="{StaticResource MyCheckBoxStyle}" 
