        <CheckBox Grid.Row="6" Grid.Column="5" x:Name="vi_v" Style="{StaticResource MyCheckBoxStyle}" 
                  Checked="checkbox_Clicked" Unchecked="checkbox_Clicked" >
            <CheckBox.RenderTransform>
                <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
            </CheckBox.RenderTransform>
        </CheckBox>
        <CheckBox Grid.Row="6" Grid.Column="6" x:Name="vi_vi"  
                   Checked="checkbox_Clicked" Unchecked="checkbox_Clicked" MinWidth="20" Margin="5,5,5,5" >
            <CheckBox.RenderTransform>
                <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
            </CheckBox.RenderTransform>
        </CheckBox>

        <TextBlock x:Name="total_i" Text="0" Grid.Row="1" Grid.Column="7"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   TextAlignment="Center" TextLineBounds="TrimToBaseline"
                   Style="{ThemeResource TitleTextBlockStyle}"/>
        <TextBlock x:Name="total_ii" Text="0" Grid.Row="2" Grid.Column="7" 
                   HorizontalAlignment="Stretch" VerticalAlignment="Center"
                   TextAlignment="Center" TextLineBounds="TrimToBaseline"
                   Style="{ThemeResource TitleTextBlockStyle}"/>
        <TextBlock x:Name="total_iii" Text="0" Grid.Row="3" Grid.Column="7" 
                   HorizontalAlignment="Stretch" VerticalAlignment="Center"
                   TextAlignment="Center" TextLineBounds="TrimToBaseline"
                   Style="{ThemeResource TitleTextBlockStyle}"/>
        <TextBlock x:Name="total_iv" Text="0" Grid.Row="4" Grid.Column="7" 
                   HorizontalAlignment="Stretch" VerticalAlignment="Center"
                   TextAlignment="Center" TextLineBounds="TrimToBaseline"
                   Style="{ThemeResource TitleTextBlockStyle}"/>
        <TextBlock x:Name="total_v" Text="0" Grid.Row="5" Grid.Column="7" 
                   HorizontalAlignment="Stretch" VerticalAlignment="Center"
                   TextAlignment="Center" TextLineBounds="TrimToBaseline"
                   Style="{ThemeResource TitleTextBlockStyle}"/>
        <TextBlock x:Name="total_vi" Text="0" Grid.Row="6" Grid.Column="7"
                   HorizontalAlignment="Stretch" VerticalAlignment="Center"
                   TextAlignment="Center" TextLineBounds="TrimToBaseline"
                   Style="{ThemeResource TitleTextBlockStyle}"/>
        <TextBlock x:Name="grandTotal" Text="0" Grid.Row="7" Grid.Column="5"
                   HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.ColumnSpan="3"
                   TextAlignment="Center" Margin="0,30,0,0"
                   Style="{ThemeResource HeaderTextBlockStyle}"/>
        <TextBlock Text="Total" Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="3"
                   HorizontalAlignment="Stretch" VerticalAlignment="Center"
                   TextAlignment="Right" Margin="0,30,0,0"
                   Style="{ThemeResource HeaderTextBlockStyle}"/>
    </Grid>
</UserControl>
