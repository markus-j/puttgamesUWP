            </CheckBox.RenderTransform>
        </CheckBox>
        <CheckBox Grid.Row="3" Grid.Column="3" x:Name="iii_iii" Style="{StaticResource MyCheckBoxStyle}" 
                  Checked="checkbox_Clicked" Unchecked="checkbox_Clicked" >
