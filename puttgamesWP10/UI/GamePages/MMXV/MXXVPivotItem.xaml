        </CheckBox>
        <CheckBox Grid.Row="3" Grid.Column="6" x:Name="iii_vi" Style="{StaticResource MyCheckBoxStyle}" 
                  Checked="checkbox_Clicked" Unchecked="checkbox_Clicked" >
