            </CheckBox.RenderTransform>
        </CheckBox>
        <CheckBox Grid.Row="3" Grid.Column="5" x:Name="iii_v" Style="{StaticResource MyCheckBoxStyle}" 
                  Checked="checkbox_Clicked" Unchecked="checkbox_Clicked" >
            <CheckBox.RenderTransform>
