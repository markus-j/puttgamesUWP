        </CheckBox>
        <CheckBox Grid.Row="4" Grid.Column="2" x:Name="iv_ii" Style="{StaticResource MyCheckBoxStyle}" 
                   Checked="checkbox_Clicked" Unchecked="checkbox_Clicked" >
            <CheckBox.RenderTransform>
