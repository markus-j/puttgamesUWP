            </CheckBox.RenderTransform>
        </CheckBox>
        <CheckBox Grid.Row="6" Grid.Column="2" x:Name="vi_ii" Style="{StaticResource MyCheckBoxStyle}" 
                  Checked="checkbox_Clicked" Unchecked="checkbox_Clicked" >
            <CheckBox.RenderTransform>
                <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
            </CheckBox.RenderTransform>
        </CheckBox>
        <CheckBox Grid.Row="6" Grid.Column="3" x:Name="vi_iii" Style="{StaticResource MyCheckBoxStyle}"  
                  Checked="checkbox_Clicked" Unchecked="checkbox_Clicked" >
            <CheckBox.RenderTransform>
                <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
            </CheckBox.RenderTransform>
        </CheckBox>
        <CheckBox Grid.Row="6" Grid.Column="4" x:Name="vi_iv" Style="{StaticResource MyCheckBoxStyle}" 
                  Checked="checkbox_Clicked" Unchecked="checkbox_Clicked" >
